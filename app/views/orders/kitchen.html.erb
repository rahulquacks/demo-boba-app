<div class="container" >
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Drink</th>
      <th scope="col">Status</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_id %></td>
        <td><%= order.first_name %></td>
        <td><%= order.last_name %></td>
        <td><%= order.drink %></td>
        <td><%= order.status %></td>
        <td>
          <%= button_to "Delete Order", order_path(order), :class => "btn btn-danger" , method: :delete%>
          <%= button_to "Mark as Completed", order_path(order), :class => "btn btn-success", method: :patch %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <a href ="<%= root_path %>">Back to Main </a>
</div>
